{$componentName = 'home-banner-section'}

<section class="{$componentName} container-fluid">

  <div class="row justify-content-center">

    <div class="row col-12 col-xl-8 align-items-end">
      <figure class="position-relative col-12 col-sm-6 p-0 m-0 pe-sm-1">
        <img src="{$urls.img_url}/home/a4x-banner-barre-de-toit.webp" alt="Barre de toit" loading="lazy"
             class="img-fluid w-100 first" width="390" height="274">
        <figcaption class="position-absolute top-0 px-2 px-sm-3 px-md-5 d-flex flex-column justify-content-center w-100 h-100">
          <span class="{$componentName}__intro-text fw-bold fw-bold text-uppercase">Barre de toit</span>
          <p class="{$componentName}__title fw-bold fw-bold text-uppercase fs-1">TOUT TRANSPORTER</p>
          <p class="{$componentName}__description fw-bold fw-bold text-uppercase">Barre longitudinales et transversales de toutes marques</p>
          <a href="/29582-barres-de-toit" class="{$componentName}__btn btn btn-light fw-bold text-uppercase">Acheter maintenant</a>
        </figcaption>
      </figure>

      <figure class="position-relative col-12 col-sm-6 p-0 m-0 mt-1 pe-sm-1">
        <img src="{$urls.img_url}/home/a4x-banner-coffre.webp" alt="Barre de toit" loading="lazy"
             class="img-fluid w-100 first" width="390" height="274">
        <figcaption class="position-absolute top-0 px-2 px-sm-3 px-md-5 d-flex flex-column justify-content-center w-100 h-100">
          <span class="${$componentName}__intro-text fw-bold fw-bold text-uppercas text-white">AMÉNAGER</span>
          <p class="{$componentName}__title fw-bold fw-bold text-uppercase fs-1 text-white">ÉQUIPER VOS COFFRES</p>
          <p class="{$componentName}__description fw-bold fw-bold text-uppercase">Grilles, bac, bâches...<br>
            des 100aines de références</p>
          <a href="/29588-tapis-de-sol-tapis-de-coffre" class="{$componentName}__btn btn btn-light fw-bold text-uppercase">Acheter maintenant</a>
        </figcaption>
      </figure>
    </div>

    <div class="row col-12 col-xl-4">

      <figure class="position-relative col-12 col-md-6 col-xl-12 p-0 m-0 mt-1 pe-sm-1">
        <img src="{$urls.img_url}/home/a4x-accessoires.webp" alt="Barre de toit" loading="lazy"
             class="img-fluid w-100 h-100 pb-xl-0 second" width="390" height="274">
        <figcaption class="position-absolute top-0 px-2 px-sm-3 px-md-5 d-flex flex-column justify-content-center w-100 h-100">
          <span class="fs-2 text-white">TOUS LES ACCESSOIRES</span>
          <span class="fs-2 fw-bold text-white">AU MEILLEUR PRIX !</span>
        </figcaption>
      </figure>

      <figure class="position-relative col-12 col-md-6 col-xl-12 p-0 m-0 mt-1 pe-sm-1">
        <img src="{$urls.img_url}/home/a4x-jantes.webp" alt="Barre de toit" loading="lazy"
             class="img-fluid w-100 h-100 second" width="390" height="274">
        <figcaption class="position-absolute top-0 px-2 px-sm-3 px-md-5 d-flex flex-column justify-content-center align-items-end w-100 h-100">

          <span class="fs-6 text-white">JANTES</span>
          <span class="fs-2 text-white">HAUTE QUALITÉ</span>
          <span class="{$componentName}__red fs-2 fw-bold">ACIER / ALU</span>
        </figcaption>
      </figure>
    </div>


  </div>
</section>
